@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid" align="center" id="space-top">
    <img class="index-logo mt-5 mb-4" src="https://i.imgur.com/7pLHF2D.png" alt="4drafts logo" />
    <div class="modal-body">
        <h3>Welcome To The Writer's Nest</h3>
        <div class="shorting">
            <strong>4drafts.org</strong> - Just an online thread-based forum for
            aspiring writers who want to share their work and avid readers who want to check out said work.
            You can browse and read threads in any category even if you don't have an account. However,
            if you have some of your own interesting ideas and stories you want to share, or just want to
            make some witty comments, go and create an account and start participating !
        </div>
    </div>

    <a asp-controller="Categories" asp-action="All" type="button" class="btn btn-outline-primary mt-4">Categories</a>
</div>
