@model ThreadViewModel
@{
    ViewBag.Title = Model.Title;
    var user = await this.userManager.GetUserAsync(User);
    var userId = user == null ? null : user.Id;
    var avatarUrl = user == null ? "https://i.imgur.com/Q67mO1m.png" : user.AvatarUrl;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-secondary">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="@Model.AuthorAvatarUrl" class="d-block ui-w-40 rounded-circle border">
                        <div class="media-body ml-3 mw-120p">
                            <a onclick="viewProfile('@Model.AuthorId')">@Model.AuthorName</a>
                            <div class="text-muted small">@Model.CreatedOn</div>
                        </div>
                        <div class="text-muted small mr-1 ml-auto">
                            <div>Member since <strong>@Model.AuthorRegisteredOn</strong></div>
                            <div><strong>@Model.AuthorThreadCount</strong> posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body mh-600" id="content-body">
                    <div class="flex-wrap text-center">
                        <h3>@Model.Title</h3>
                    </div>
                    <hr />
                    <span class="content-text">@Model.Content</span>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-start align-items-start px-0 pt-0 pb-3">
                    <div class="px-4 pt-3" id="thread-likes-section">
                        <partial name="_ThreadLikesPartial" model="@Model" />
                    </div>
                    <div class="btn-group mt-auto mb-auto pt-3 px-2 align-end" role="group" aria-label="Basic example">
                        @if (userId == Model.AuthorId)
                        {
                            <div class="zoom"><a class="btn btn-link" onclick="editThreadInPopup('@Model.Id')"><i class="fas fa-lg big-icon fa-pencil-alt"></i></a></div>
                            <div class="zoom"><a class="btn btn-link" onclick="deleteThreadInPopup('@Model.Id')"><i class="fas fa-lg big-icon fa-trash-alt"></i></a></div>
                        }
                        <div class="zoom"><a class="btn btn-link" asp-controller="Threads" asp-action="Report" asp-route-threadId="@Model.Id"><i class="fas fa-lg big-icon fa-flag"></i></a></div>
                        <div class="zoom"><a class="btn btn-link" onclick="changeArrow()"><i id="fold-arrow" class="fas fa-lg big-icon fa-arrow-down"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="container-fluid card" id="comment-section">
                <partial name="_CommentsPartial" model="@Model" />
            </div>
        </div>
    </div>
</div>