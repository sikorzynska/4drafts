@model ThreadViewModel
@{
    ViewBag.Title = Model.Title;
    var user = await this.userManager.GetUserAsync(User);
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="@Model.AuthorAvatarUrl" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3">
                            <a href="javascript:void(0)" data-abc="true">@Model.AuthorName</a>
                            <div class="text-muted small">@Model.CreatedOn</div>
                        </div>
                        <div class="text-muted small ml-3">
                            <div>Member since <strong>@Model.AuthorRegisteredOn</strong></div>
                            <div><strong>@Model.AuthorThreadCount</strong> posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body mh-600" id="content-body">
                    <div class="flex-wrap text-center">
                        <h3>@Model.Title</h3>
                    </div>
                    <hr />
                    <span style="white-space: pre-wrap;">@Model.Content</span>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                    <div class="px-4 pt-3 media-img-30"> 
                    <a class="d-inline-flex align-items-center align-middle zoom" onclick="changeHeart()">
                        <img src="https://i.imgur.com/4lydMB6.png" id="heartImg"/>
                    </a> 
                    </div>
                    <div class="px-4 pt-3 media-img-30"> 
                    <a class="d-inline-flex zoom" onclick="changeScreen()">
                        <img src="https://image.flaticon.com/icons/png/512/1057/1057155.png" id="screenImg"/>
                    </a> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function changeScreen() {
        var screenImg = document.getElementById('screenImg');
        var contentBody = document.getElementById('content-body');

        if (screenImg.src == "https://image.flaticon.com/icons/png/512/1057/1057155.png") {
            screenImg.src = "https://image.flaticon.com/icons/png/512/1057/1057095.png";
            contentBody.classList.remove('mh-600');
        }
        else {
            screenImg.src = "https://image.flaticon.com/icons/png/512/1057/1057155.png";
            contentBody.classList.add('mh-600');
        }
    }

    function changeHeart() {
        var heartImg = document.getElementById('heartImg');

        if (heartImg.src == "https://i.imgur.com/4lydMB6.png") {
            heartImg.src = "https://i.imgur.com/gY58ZVD.png";
        }
        else {
            heartImg.src = "https://i.imgur.com/4lydMB6.png";
        }
    }
</script>