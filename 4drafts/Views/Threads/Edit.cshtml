@model EditThreadViewModel

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<div class="container">
    <div class="main-body">
        <form id="thread-edit-formdata" asp-controller="Threads" asp-action="Edit">
            <div class="row justify-content-center">
                <div class="col card-body form-body">
                    <h2 align="center"><i class="fas fa-edit"></i> Edit @Model.Type</h2>
                    <hr />
                    <div class="form-group d-none">
                        <input asp-for="Id" class="form-control" hidden>
                    </div>
                    <div class="form-group d-none">
                        <input asp-for="TypeId" class="form-control" hidden>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control edges" placeholder="The title of your story..." id="title-content">
                        <span asp-validation-for="Title" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" rows="6" class="form-control edges" placeholder="The story itself..." id="content-content"></textarea>
                        <span asp-validation-for="Content" class="small text-danger"></span>
                    </div>
                </div>
                <div class="form-footer">
                    <div class="text-secondary" align="center">
                        <a onclick="refer('thread-edit-formdata')" class="btn btn-sm btn-outline-info"><i class="fas fa-save"></i> Save Changes</a>
                        <button class="btn btn-sm btn-outline-dark" type="button" onclick="cancelModal()"><i class="fas fa-times"></i> Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
