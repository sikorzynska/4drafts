@model EditCommentViewModel

@{
    ViewBag.Title = "Edit";
    Layout = null;
    var commentLength = Model.Content != null ? Model.Content.Length : 0;
}

<div class="container">
    <div class="main-body">
        <form id="comment-edit-formdata" asp-controller="Comments" asp-action="Edit">
            <div class="row justify-content-center">
                <div class="col card-body form-body">
                    <h2 align="center"><i class="fas fa-edit"></i> Edit</h2>
                    <hr />
                    <div class="form-group d-none">
                        <input asp-for="Id" class="form-control" id="title-input" hidden>
                    </div>
                    <div class="form-group">
                        <span class="float-right badge badge-secondary mb-1" id="edit_comment_count">@commentLength / 2000</span>
                        <textarea asp-for="Content" maxlength="500" rows="4" class="form-control edges" id="edit_comment-content"
                                  onchange="countCharacters('edit_comment_count', 'edit_comment-content', 2000)"
                                  onkeypress="countCharacters('edit_comment_count', 'edit_comment-content', 2000)"
                                  oninput="countCharacters('edit_comment_count', 'edit_comment-content', 2000)"
                                  onkeyup="countCharacters('edit_comment_count', 'edit_comment-content', 2000)"
                                  onpaste="countCharacters('edit_comment_count', 'edit_comment-content', 2000)"></textarea>
                        <span asp-validation-for="Content" class="small text-danger"></span>
                    </div>
                </div>
                <div class="form-footer">
                    <div class="text-secondary" align="center">
                        <a onclick="refer('comment-edit-formdata')" class="btn btn-sm btn-outline-info"><i class="fas fa-save"></i> Save Changes</a>
                        <button class="btn btn-sm btn-outline-dark" type="button" onclick="cancelModal()"><i class="fas fa-times"></i> Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
