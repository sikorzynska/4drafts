@model UserRegisterFormModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}


<form asp-controller="Authentication" asp-action="Register" id="register-formdata" method="post">
    <div class="container-fluid col-8 text-center">
        <h1>@ViewData["Title"]</h1>
        <h4>Sign up to share your stories</h4>
        <hr />
        <div class="text-left">
            <div class="form-group" autocomplete="off">
                <label asp-for="Username"></label>
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lg fa-user-astronaut big-icon"></i></span>
                    <input asp-for="Username" placeholder="Choose a username..." class="form-control" />
                </div>
                <span asp-validation-for="Username" class="text-danger text-left" style="float: left;"></span>
            </div>
            <div class="form-group mt-4" autocomplete="off">
                <label asp-for="Email"></label>
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lg fa-envelope big-icon"></i></span>
                    <input type="email" asp-for="Email" placeholder="Your email here..." class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger" style="float: left;"></span>
            </div>
            <div class="form-group mt-4" autocomplete="off">
                <label asp-for="Password"></label>
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lg fa-lock big-icon"></i></span>
                    <input type="password" asp-for="Password" placeholder="Your password here..." class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger" style="float: left;"></span>
            </div>
            <div class="form-group mt-4" autocomplete="off">
                <label asp-for="ConfirmPassword"></label>
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lg fa-lock big-icon"></i></span>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Your password here..." class="form-control" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger" style="float: left;"></span>
            </div>
        </div>
        <div class="form-group d-none">
            <input asp-for="ReturnUrl" class="form-control" />
        </div>
        <div class="form-group mt-2" autocomplete="off">
            <a onclick="refer('register-formdata')" class="btn btn-outline-primary">Register</a>
        </div>
        <div class="form-group">
            <span class="text-muted">Already have an account?</span>
            <a onclick="popUp('/Authentication/Login/', 'auth', '@Context.Request.GetDisplayUrl()')">Sign In</a>
        </div>
    </div>
</form>
