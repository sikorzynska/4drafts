@model UserLoginFormModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<form autocomplete="off" asp-controller="Authentication" asp-action="Login" id="login-formdata" method="post">
    <div class="container-fluid text-center col-8">
        <h1>@ViewData["Title"]</h1>
        <h4>Sign in to share your stories</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger text-left"></div>
        <div class="text-left">
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lg fa-envelope big-icon"></i></span>
                    <input type="email" asp-for="Email" placeholder="Your email here..." class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger" style="float: left;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lg fa-lock big-icon"></i></span>
                    <input type="password" asp-for="Password" placeholder="Your password here..." class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger" style="float: left;"></span>
            </div>
        </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group d-none">
                <input asp-for="ReturnUrl" class="form-control" />
            </div>
        <div class="form-group mt-2">
            <a onclick="refer('login-formdata')" class="btn btn-outline-primary">Login</a>
        </div>
        <div class="form-group">
            <span class="text-muted">Don't have an account?</span>
            <a onclick="popUp('/Authentication/Register/', 'auth', '@Context.Request.GetDisplayUrl()')">Sign Up</a>
        </div>
    </div>
</form>
