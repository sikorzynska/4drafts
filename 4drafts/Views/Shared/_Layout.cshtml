@{ 
    var user = await this.userManager.GetUserAsync(User);
    var userId = user == null ? null : user.Id;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 4drafts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.25/b-1.7.1/date-1.1.0/fc-3.3.3/sc-2.0.4/sb-1.1.0/sp-1.3.0/sl-1.3.3/datatables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
</head>
<body class="bg-ocean">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-ocean-layout border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="layout-logo" src="https://i.imgur.com/7pLHF2D.png" alt="Logo" />
                </a>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a asp-controller="Threads" asp-action="Browse" title="threads" class="nav-link btn-link-wh layout-anchor"><i class="fal fa-books"></i><span> Threads</span></a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Threads" asp-action="Stories" title="stories" class="nav-link btn-link-wh layout-anchor"><i class="fal fa-book"></i><span> Stories</span></a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Threads" asp-action="Prompts" title="writing prompts" class="nav-link btn-link-wh layout-anchor"><i class="far fa-lightbulb"></i><span> Prompts</span></a>
                    </li>
                    @{
                        if (user != null)
                        {
                            <li class="nav-item">
                                <a asp-controller="Drafts" asp-action="All" title="my drafts" class="nav-link btn-link-wh layout-anchor"><i class="fal fa-drafting-compass"></i><span> Drafts</span></a>
                            </li>
                            <li class="nav-item dropdown">
                                <a title="start thread" class="nav-link btn-link-wh layout-anchor" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fal fa-file-plus"></i><span> Post</span></a>
                                <div class="dropdown-menu">
                                    @await Component.InvokeAsync("UserDrafts")
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a onclick="popUp('/Authentication/Login/', 'auth', '/Drafts/All/')" title="my drafts" class="nav-link btn-link-wh layout-anchor"><i class="far fa-drafting-compass"></i><span> Drafts</span></a>
                            </li>
                            <li class="nav-item dropdown">
                                <a onclick="popUp('/Authentication/Login/', 'auth', '@Context.Request.GetDisplayUrl()')" title="start thread" class="nav-link dropdown-toggle btn-link-wh layout-anchor"><i class="fal fa-file-plus"></i><span> Post</span></a>
                            </li>
                        }
                    }
                </ul>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content bg-transparent">
                <div class="modal-body border gray-stripes">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-transparent">
                <div class="modal-body border gray-stripes">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="loaderbody hide" id="loaderbody">
        <div class="loader"></div>
    </div>

    <footer class="border-nobottom footer bg-ocean-layout">
        <div class="container text-center">
            <a class="btn-link btn-link-wh layout-anchor"><i class="fal fa-route-interstate"></i><span> [Terms of Service]</span></a>
            &nbsp;
            <a class="btn-link btn-link-wh layout-anchor"><i class="fal fa-blinds"></i><span> [Privacy Policy]</span></a>
            &nbsp;
            <a class="btn-link btn-link-wh layout-anchor"><i class="fal fa-badge-dollar"></i><span> [Support Us]</span></a>
            &nbsp;
            <a class="btn-link btn-link-wh layout-anchor"><i class="fal fa-phone-alt"></i><span> [Contact Us]</span></a><br />
            <span>Copyright © 4drafts&trade; @DateTime.UtcNow.Year. All rights reserved.</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notify.min.js" asp-append-version="true"></script>
    <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.25/b-1.7.1/date-1.1.0/fc-3.3.3/sc-2.0.4/sb-1.1.0/sp-1.3.0/sl-1.3.3/datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
