                        {
                            avatar = String.IsNullOrWhiteSpace(thread.AuthorAvatarUrl) ? "https://image.flaticon.com/icons/png/512/64/64572.png" : thread.AuthorAvatarUrl;
                            if (userId == thread.AuthorId)
                            {
                                <tr class="table-light">
                                    <th><a asp-controller="Threads" asp-action="Read" asp-route-threadId="@thread.Id" class="d-block text-truncate mw-min-content">@thread.Title</a></th>
                                    <td class="text-truncate">@thread.CreatedOn</td>
                                    <td>@thread.Points</td>
                                    <td>@thread.CommentCount</td>
                                    <td class="text-truncate">
