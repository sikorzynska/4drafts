@model List<DraftViewModel>

<span id="draft-count">[@Model.Count / 10] </span>
<table class="table table-hover table-fixed">
    <thead class="bg-tablehead">
        <tr>
            <th class="text-truncate border text-center" style="width: 6%;" scope="col">Type</th>
            <th class="text-truncate border" scope="col">Title</th>
            <th class="text-truncate border w-15" scope="col">Last Edit</th>
            <th class="text-truncate text-center border w-10" scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var draft in Model)
            {
                <tr id="@draft.Id" class="table-light">
                    <th class="border text-center v-middle">@draft.TypeName</th>
                    <th class="text-truncate border" scope="row"><a class="btn-link" onclick="popUp('/Threads/Create/', 'thread-draft', null, '@draft.Id', '@draft.TypeId')">@draft.Title</a></th>
                    <td class="text-truncate border">@draft.CreatedOn</td>
                    <td class="text-truncate text-center border v-middle">
                        <a onclick="popUp('/Drafts/Edit/', 'draft-edit', null, '@draft.Id', '@draft.TypeId')" class="btn-link"><i class="fal fa-lg fa-pencil"></i></a>&nbsp;
                        <a onclick="deletePopup('@draft.Id', '/Drafts/Delete/')" class="btn-link ml-2"><i class="fal fa-lg fa-trash"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
