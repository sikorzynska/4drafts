@model List<DraftViewModel>


<span id="draft-count">[@Model.Count / 10] </span>
<table class="table table-hover table-fixed">
    <thead class="bg-tablehead">
        <tr>
            <th class="text-truncate border-black-bottom border-black-top border-black-left border-black-right" scope="col">Title</th>
            <th class="text-truncate border-black-top border-black-bottom border-black-right" scope="col">Description</th>
            <th class="text-truncate border-black-top border-black-bottom border-black-right" scope="col">Created</th>
            <th class="text-truncate text-center border-black-top border-black-bottom border-black-right" scope="col" style="width: 165px;">Options</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var draft in Model)
            {
                var desc = String.IsNullOrEmpty(draft.Description) ? "---" : draft.Description;
                <tr id="@draft.Id" class="table-light">
                    <th class="text-truncate border-black-left border-black-bottom border-black-right" scope="row"><a class="btn-link" onclick="popUp('/Threads/Create/', 'thread-draft', null, '@draft.Title', '@draft.Description', '@draft.Content', '@draft.Id')">@draft.Title</a></th>
                    <td class="text-truncate border-black-bottom border-black-right">@desc</td>
                    <td class="text-truncate border-black-bottom border-black-right">@draft.CreatedOn</td>
                    <td class="text-truncate text-center border-black-bottom border-black-right">
                        <a onclick="popUp('/Drafts/Edit/', 'draft-edit', null, null, null, null, '@draft.Id')" class="btn-link"><i class="fas fa-pencil-alt"></i> [edit]</a>
                        <a onclick="deletePopup('@draft.Id', '/Drafts/Delete/')" class="btn-link ml-2"><i class="fas fa-trash-alt"></i> [delete]</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
