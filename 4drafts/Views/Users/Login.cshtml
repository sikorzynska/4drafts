@model UserLoginFormModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<body>
    <form autocomplete="off" asp-controller="Users" asp-action="Login" id="account" method="post" onsubmit="return authPost(this);">
        <div class="container-fluid text-center col-8">
            <h1>@ViewData["Title"]</h1>
            <h4>Sign in to share your stories</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger text-left"></div>
            <div class="form-group">
                <label asp-for="Email" style="float: left;"></label>
                <input type="email" asp-for="Email" placeholder="Your email here..." class="form-control" />
                <span asp-validation-for="Email" class="text-danger" style="float: left;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" style="float: left;"></label>
                <input type="password" asp-for="Password" placeholder="Your password here..." class="form-control" />
                <span asp-validation-for="Password" class="text-danger" style="float: left;"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group d-none">
                <input asp-for="ReturnUrl" placeholder="Your email here..." class="form-control" />
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="form-group">
                <span class="text-muted">Don't have an account?</span>
                <a onclick="authGet('@Url.Content("/Users/Register/")' ,'@Context.Request.GetDisplayUrl()')">Sign Up</a>
            </div>
        </div>
    </form>
</body>
