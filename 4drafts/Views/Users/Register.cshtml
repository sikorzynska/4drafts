@model UserRegisterFormModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<body>
    <form autocomplete="off" asp-controller="Users" asp-action="Register" id="account" method="post" onsubmit="return authPost(this);">
        <div class="container-fluid col-8 text-center">
            <h1>@ViewData["Title"]</h1>
            <h4>Sign up to share your stories</h4>
            <hr />
            <div class="form-group" autocomplete="off">
                <label asp-for="Username" style="float: left;"></label>
                <input asp-for="Username" placeholder="Choose a username..." class="form-control" />
                <span asp-validation-for="Username" class="text-danger text-left" style="float: left;"></span>
            </div>
            <div class="form-group mt-4" autocomplete="off">
                <label asp-for="Email" style="float: left;"></label>
                <input autocomplete="off" asp-for="Email" placeholder="Your email here..." class="form-control" />
                <span asp-validation-for="Email" class="text-danger text-left" style="float: left;"></span>
            </div>
            <div class="form-group mt-4" autocomplete="off">
                <label asp-for="Password" style="float: left;"></label>
                <input autocomplete="off" asp-for="Password" placeholder="Choose a password..." class="form-control" />
                <span asp-validation-for="Password" class="text-danger text-left" style="float: left;"></span>
            </div>
            <div class="form-group mt-4" autocomplete="off">
                <label asp-for="ConfirmPassword" style="float: left;"></label>
                <input autocomplete="off" asp-for="ConfirmPassword" placeholder="Repeat your password..." class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger text-left" style="float: left;"></span>
            </div>
            <div class="form-group d-none">
                <input asp-for="ReturnUrl" class="form-control" />
            </div>
            <div class="form-group mt-2" autocomplete="off">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <div class="form-group">
                <span class="text-muted">Already have an account?</span>
                <a onclick="authGet('@Url.Content("/Users/Login/")' ,'@Model.ReturnUrl')">Sign In</a>
            </div>
        </div>
    </form>
</body>