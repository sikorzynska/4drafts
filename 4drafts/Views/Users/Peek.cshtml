@model UserViewModel

@{
    ViewBag.Title = "Peek";
    var user = await this.userManager.GetUserAsync(User);
    Layout = null;
    var avatar = "";
    avatar = String.IsNullOrWhiteSpace(Model.AvatarUrl) ? "https://image.flaticon.com/icons/png/512/64/64572.png" : Model.AvatarUrl;
}

<div class="container-fluid mb-1">
    <div class="col" align="center">
        <div class="profile-info col">
                <div class="user-heading round mb-1">
                    <img src="@avatar">
                    <h1>@Model.Username</h1>
                    <span><i class="fal fa-envelope"></i> @Model.Email</span><br />
                    <span>Member since @Model.RegisteredOn</span><br />
                    <span class="badge bg-info">new user </span>
                </div>
                <table class="table mt-3">
                    <tbody>
                        <tr>
                            <th colspan="2" class="border text-center bg-tablehead-gray">
                                <i class="fal fa-trophy"></i> Statistics
                            </th>
                        </tr>
                        <tr>
                            <th class="border w-35" scope="row"><i class="fal fa-star"></i> Points</th>
                            <td class="border">118</td>
                        </tr>
                        <tr>
                            <th class="border w-35" scope="row"><i class="fal fa-medal"></i> Awards</th>
                            <td class="border">11</td>
                        </tr>
                        <tr>
                            <th class="border w-35" scope="row"><i class="fal fa-books"></i> Threads</th>
                            <td class="border">@Model.ThreadCount</td>
                        </tr>
                        <tr>
                            <th class="border w-35" scope="row"><i class="fal fa-comments-alt"></i> Comments</th>
                            <td class="border">@Model.CommentCount</td>
                        </tr>
                    </tbody>
                </table>
        </div>
    </div>
</div>
<div align="center">
    <a asp-controller="Users" asp-action="Profile" asp-route-u="@Model.Username" class="btn btn-outline-primary"><i class="fal fa-eye"></i> Profile</a>
    <button class="btn btn-outline-dark" type="button" onclick="cancelModal()"><i class="fal fa-times"></i> Close</button>
</div>
