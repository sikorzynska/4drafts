@model DraftViewModel

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<div class="container">
    <div class="main-body">
        <form id="draft-edit-formdata" asp-controller="Drafts" asp-action="Edit">
            <div class="row justify-content-center">
                <div class="col card-body form-body">
                    <h2 align="center"><i class="fas fa-edit"></i> Edit</h2>
                    <hr />
                    <div class="form-group d-none">
                        <input asp-for="Id" class="form-control" hidden>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="The title of your story..." id="title-content">
                        <span asp-validation-for="Title" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description (optional)</label>
                        <textarea asp-for="Description" rows="4" class="form-control" placeholder="Quick description of what the story is about..." id="description-content"></textarea>
                        <span asp-validation-for="Description" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" rows="6" class="form-control" placeholder="The story itself..." id="content-content"></textarea>
                        <span asp-validation-for="Content" class="small text-danger"></span>
                    </div>
                </div>
                <div class="form-footer">
                    <div class="text-secondary" align="center">
                        <a onclick="refer('draft-edit-formdata')" class="btn btn-outline-primary"><i class="fas fa-save"></i> Save Changes</a>
                        <button class="btn btn-outline-dark" type="button" onclick="cancelModal()"><i class="fas fa-window-close"></i> Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
